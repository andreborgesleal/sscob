@using App_Dominio.Repositories
@model System.Web.Mvc.PagedList<DWM.Models.Repositories.EstabelecimentoViewModel>

@if (Model != null)
{
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Estabelecimentos</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>CNPJ</th>
                        <th>Nome</th>
                        <th>Tipo de Estabelecimento</th>
                        <th>Email</th>
                        <th>Setor de Recolhimento</th>
                        <th class="text-center">Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DWM.Models.Repositories.EstabelecimentoViewModel est in Model)
                    {
                        <tr>
                            <td>@est.CNPJComFormatacao</td>
                            <td>@est.Nome</td>
                            <td>
                                @if (est.TipoEstabelecimento == "1")
                                {
                                    <span>Público</span>
                                }
                                else
                                {
                                    <span>Privado</span>
                                }
                            </td>
                            <td>@est.Email</td>
                            <td>@est.SetorRecolhimento</td>
                            <td class="text-center">
                                <a href="Edit?CNPJ=@est.CNPJ" title="Editar"><i class="fa fa-2x fa-edit text-orange"></i></a>&nbsp;
                                <a href="Delete?CNPJ=@est.CNPJ" title="Editar"><i class="fa fa-2x fa-trash text-danger"></i></a>&nbsp;
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->

    @Html.Partial("_defaultListButtons", new List<ButtonRepository> { new ButtonRepository() { linkText = "Incluir", actionName = "Create", controllerName = "Estabelecimentos", buttonType = "primary" } })
}
